@using EnvironmentCrime.Models.AppDb

@{
    Layout = "_CoordinatorLayout";
}

@model IEnvironmentCrimeRepository
@{
    string? statusFilter = null;
    string? departmentFilter = null;
    string? employeeFilter = null;
    string? caseNumberFilter = null;

    if (Context.Request.HasFormContentType)
    {
        var form = Context.Request.Form;

        statusFilter = form["status"].FirstOrDefault();
        departmentFilter = form["department"].FirstOrDefault();
        caseNumberFilter = form["casenumber"].FirstOrDefault();
    }
    var errands = Model.FilteredErrands("coordinator", statusFilter, departmentFilter, employeeFilter, caseNumberFilter);
}
<h2>Ärenden</h2>
<p class="info">Du är inloggad som samordnare</p>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
<form method="post">
    <table id="coordinatorForm">
        <tr>
            <td class="label">Välj status:</td>
            <td class="label">Välj avdelning:</td>
            <td>&nbsp;</td>
            <td class="label">Ärendenummer:</td>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>
                <select name="status">
                    <option selected="selected">Välj alla</option>
                    @foreach (var errandStatus in Model.ErrandStatuses)
                    {
                        <option value="@errandStatus.StatusName">@errandStatus.StatusName</option>
                    }
                </select>
            </td>
            <td>
                <select name="department">
                    <option selected="selected">Välj alla</option>

                    @foreach (var department in Model.Departments
                                        .Where(d => d.DepartmentName != "Småstads kommun"))
                    {
                        <option value="@department.DepartmentName">
                            @department.DepartmentName
                        </option>
                    }

                </select>
            </td>
            <td><input class="button" type="submit" value="Hämta lista"></td>
            <td><input name="casenumber"></td>
            <td><input class="button" type="submit" value="Sök"></td>
        </tr>
    </table>
</form>
<!--Errand list-->
@await Component.InvokeAsync("ErrandList", new {
role = "coordinator",
    statusFilter,
    departmentFilter,
    employeeFilter,
    caseNumberFilter
})
